{
  "name": "openocd-tools",
  "displayName": "openocd-tools",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:*.ioc"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "openocd-tools.flash",
        "title": "Flash"
      },
      {
        "command": "openocd-tools.debug",
        "title": "Debug"
      },
      {
        "command": "openocd-tools.chooseCfg",
        "title": "Choose OpenOCD Config File"
      },
      {
        "command": "openocd-tools.chooseTarget",
        "title": "Choose Target"
      },
      {
        "command": "openocd-tools.chooseSVD",
        "title": "Choose SVD File"
      }
    ],
    "configuration": {
      "title": "OpenOCD Tools",
      "properties": {
        "openocd-tools.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/Disable this extension"
        },
        "openocd-tools.path": {
          "type": "string",
          "default": "openocd",
          "description": "Path to OpenOCD executable"
        },
        "openocd-tools.cfg": {
          "type": "string",
          "default": "",
          "description": "Path to OpenOCD config file"
        },
        "openocd-tools.target": {
          "type": "string",
          "default": "",
          "description": "Target to flash/debug"
        }
      }
    },
    "menus": {
      "editor/title": [
        {
          "when": "true",
          "command": "openocd-tools.flash",
          "group": "1_run@4"
        },
        {
          "when": "true",
          "command": "openocd-tools.debug",
          "group": "1_run@5"
        },
        {
          "when": "true",
          "command": "openocd-tools.chooseCfg",
          "group": "1_run@1"
        },
        {
          "when": "true",
          "command": "openocd-tools.chooseTarget",
          "group": "1_run@2"
        },
        {
          "when": "true",
          "command": "openocd-tools.chooseSVD",
          "group": "1_run@3"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.91.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
